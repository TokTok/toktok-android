<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_item_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="6dp"
    app:cardUseCompatPadding="true">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/home_item_color"
            android:layout_width="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="fill_parent"
            android:alpha="0.7"></RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="#ffffff"
            android:paddingLeft="15dp"
            android:id="@+id/home_item_view_front"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_height="70dp">

            <LinearLayout
                android:id="@+id/home_item_text"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Lorem Ipsum"
                    android:id="@+id/home_item_name"
                    android:fontFamily="sans-serif-light"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/home_item_last_message"
                    android:text="Lorem ipsum dolor sit amet, consectetur..."
                    android:fontFamily="sans-serif-light"
                    android:textSize="12sp"
                    android:textColor="#7D7D7D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="14:30"
                android:fontFamily="sans-serif-light"
                android:textSize="12sp"
                android:textColor="#7D7D7D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>